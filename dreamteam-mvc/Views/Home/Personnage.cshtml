</div>

<div class="row justify-content-around text-light">
    <div class="col-lg-4">
        <div class="card border border-breach bg-darkest mb-4 shadow-lg">
            <img src="../../@ViewBag.Perso.PicUrl" class="card-img-top" alt=""> <!-- agents/breach_m.png -->
            <ul class="list-group list-group-flush">
                <li class="list-group-item bg-darkest">
                    <div class="row">
                        <div class="col-lg-5"><strong> Nom Réel </strong></div>
                        <div class="col-lg-7"> @ViewBag.Perso.Name </div>
                    </div>
                </li>
                <li class="list-group-item bg-darkest border-top border-bottom border-breach">
                    <div class="row">
                        <div class="col-lg-5"><strong> Originaire </strong></div>
                        <div class="col-lg-7"> @ViewBag.Perso.Country </div>
                    </div>
                </li>
                <!--
                    <li class="list-group-item bg-darkest border-bottom border-breach">
                        <div class="row">
                            <div class="col-lg-5"><strong>Affi </strong></div>
                            <div class="col-lg-7"> Valorant Protocol </div>
                        </div>
                    </li>
                -->
                <li class="list-group-item bg-darkest">
                    <div class="badge badge-danger"> <img height="10px" style="vertical-align: top" src="">  </div> <!-- agents/initiator.svg -->  <!-- Initiator -->
                </li>
            </ul>
        </div>
    </div>
    <div class="col-lg-8">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="card text-white bg-darkest mb-4 border border-breach shadow-lg">
                    <strong id="bio-toggle" class="card-header border-bottom border-breach"> <svg class="bi bi-chevron-right" height="16" viewBox="0 0 20 20" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6.646 3.646a.5.5 0 01.708 0l6 6a.5.5 0 010 .708l-6 6a.5.5 0 01-.708-.708L12.293 10 6.646 4.354a.5.5 0 010-.708z" /></svg>Biographie </strong>
                    <div class="card-body show">
                        <p class="card-text mt-4 mb-2">
                            @ViewBag.Perso.Description
                        </p>
                    </div>
                </div>
            </div>
            <div class="w-100">
                <div class="col-lg-12">
                    <div class="card text-white bg-darkest mb-3 border border-breach shadow-lg">
                        <strong id="abilities-toggle" class="card-header border-bottom border-breach"> <svg class="bi bi-chevron-right" height="16" viewBox="0 0 20 20" fill="currentColor" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M6.646 3.646a.5.5 0 01.708 0l6 6a.5.5 0 010 .708l-6 6a.5.5 0 01-.708-.708L12.293 10 6.646 4.354a.5.5 0 010-.708z" /></svg> Compétences </strong>
                        <div class="card-body text-center show">
                            <div class="btn-toolbar btn-toolbar-sm mt-3 d-inline-block" role="group" aria-label="Basic example">
                                <button id="a1-btn" type="button" class="btn btn-dark btn-zoom mb-3 mx-3 shadow"><img height="64px" src="../../@ViewBag.Perso.Abilities[1].IconUrl"></button> <!-- agents/breach_1.png -->
