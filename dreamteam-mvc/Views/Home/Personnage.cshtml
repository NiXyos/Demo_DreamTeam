                            </div>

                            <div id="a1" class="no-display">
                                <h3 class="text-breach shadow-title"> <strong>@ViewBag.Perso.Abilities[0].Name</strong> </h3>
                                <div class="mb-3">
                                    @ViewBag.Perso.Abilities[0].Description
                                </div>
                                <div class="text-left ml-2 mb-4">
                                    <div class="badge badge-danger">Domage : @ViewBag.Perso.Abilities[0].Damages </div> <!-- Damage: N/A -->
                                    <div class="badge badge-success">Durée de la compétence : @ViewBag.Perso.Abilities[0].Cooldown </div> <!-- Duration: 1-2s Flash Duration, 0.5s Flash Delay -->
                                    <div class="badge badge-light">Durée de rechargement : @ViewBag.Perso.Abilities[0].Duration </div>
                                    <div class="badge badge-primary">Coût : @ViewBag.Perso.Abilities[0].Cost </div> <!-- Cost: 200 -->
                                    <div class="badge badge-secondary">Distance : @ViewBag.Perso.Abilities[0].Range </div> <!-- HP: N/A -->
                                </div>
                                <div class="embed-responsive embed-responsive-16by9">
                                    <video id="a4-v" class="embed-responsive-item" autoplay loop muted><source src="" type="video/mp4" /></video> <!-- agents/breach_3_v.mp4 -->
                                </div>
